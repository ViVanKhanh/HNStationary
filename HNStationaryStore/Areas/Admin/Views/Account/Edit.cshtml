@model HNStationaryStore.Models.EditUserViewModel
@{
    ViewBag.Title = "Sửa tài khoản";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h3 style="color: #222; font-weight: 700;">@ViewBag.Title</h3>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/account">Tài khoản</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>

    <section class="content">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0" style="color: #222; font-weight: 700;">@ViewBag.Title</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false)

                    @Html.HiddenFor(x => x.UserName)

                    <div class="form-group">
                        <label>Tài khoản</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    <div class="form-group">
                        <label>Họ tên</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Quyền</label>
                        @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Lưu thay đổi</button>
                        <a href="/admin/account" class="btn btn-secondary">Quay lại</a>
                    </div>
                }
            </div>
            <div class="card-footer"></div>
        </div>
    </section>
</div>
