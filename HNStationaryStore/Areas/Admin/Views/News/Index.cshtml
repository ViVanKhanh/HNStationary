@model PagedList.PagedList<HNStationaryStore.Models.EF.News>
    @using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h3 style="color: #222; font-weight: 700;">Quản lý @ViewBag.Title</h3>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>

    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0" style="color: #222; font-weight: 700;">@ViewBag.Title</h5>
                <div class="card-tools">
                    <a href="/admin/news/add" class="btn btn-primary">Thêm mới</a>
                    <a href="#" class="btn btn-danger " id="btnDeleteAll" >Xóa</a>
                </div>
            </div>
            <div class="card-body">
                <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my- my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        @using (Html.BeginForm("Index", "News", FormMethod.Get, new { }))
                        {
                            @Html.TextBox("SearchText", null, new { @class = "form-control", id = "searchInput" })
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        }
                    </div>
                </form>
                <table class="table table-hover my-2">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="SelectAll" /></th>
                            <th>STT</th>
                            <th>Tiêu đề tin</th>
                            <th>Hình ảnh</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = (Model.PageNumber - 1) * Model.PageSize + 1;
                            foreach (var item in Model)
                            {
                                var strCheck = item.IsActived ? "<i class = 'fa fa-check text-success'></i>" : "<i class = 'fas fa-times text-danger'></i>";
                                <tr id="trow_@item.NewsID">
                                    <td><input type="checkbox" class="ckbItem" value="@item.NewsID" /></td>
                                    <td>@i</td>
                                    <td>@item.Title</td>
                                    <td><img src="@item.Image" width="70" /></td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <a href="#" data-id='@item.NewsID' class="btnActive">@Html.Raw(strCheck)</a>
                                    </td>
                                    <td>
                                        <a href="/admin/news/edit/@item.NewsID" class="btn btn-sm btn-primary">Sửa</a>
                                        <a href="#" data-id="@item.NewsID" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                    </td>
                                </tr>
                                i++;
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Không có bản ghi nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
</div><!-- /.container-fluid -->
@section scripts{
    <script>
        $(document).ready(function () {

      

            // Kiểm tra nếu ô tìm kiếm bị xóa thì load lại trang để hiển thị tất cả bản ghi
            $('#searchInput').on('input', function () {
                if ($(this).val() === '') {
                    // Nếu không có dữ liệu tìm kiếm, reload lại trang để hiển thị tất cả bản ghi
                    window.location.href = '/admin/news';
                }
            });

            //xoa het
            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkBoxes = $(this).parents('.card').find('tbody input.ckbItem');
                var i = 0;
                checkBoxes.each(function () {
                    if (this.checked) {
                        $(this).attr('selected', 'checked');
                        var _id = $(this).val();
                        str += (str === "" ? _id : "," + _id);
                        i++;
                    } else {
                        $(this).attr('selected', '');
                    }
                });

                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa tất cả các bản ghi này không ?");
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/news/DeleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        })
                    }
                }
            });

            $('body').on('change', "#SelectAll", function () {
                var checkStatus = this.checked;
                var checkBoxes = $(this).parents('.card-body').find('tr td input:checkbox');
                checkBoxes.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkBoxes.attr('selected', 'checked');
                    }
                    else {
                        checkBoxes.attr('selected', '');
                    }
                })
            })

            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn có muốn xóa bản ghi này không ?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/news/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault(); // Prevent default action of <a> tag
                var btn = $(this);
                var id = btn.data("id");

                $.ajax({
                    url: '/admin/news/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });
        });
    </script>
}