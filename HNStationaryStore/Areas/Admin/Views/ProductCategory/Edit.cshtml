@model HNStationaryStore.Models.EF.ProductCategory

@{
    ViewBag.Title = "Cập nhật danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row mb-2">
    <div class="col-sm-6">
        <h3 class="fw-bold text-dark">Cập nhật danh mục</h3>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin/ProductCategory">Danh mục sản phẩm</a></li>
            <li class="breadcrumb-item active">Cập nhật</li>
        </ol>
    </div>
</div>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title fw-bold text-dark mb-0">Thông tin danh mục sản phẩm</h5>

        </div>
        <div class="card-body">
            <div class="card-body p-0">
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false)
                        @Html.HiddenFor(x => x.CategoryId)
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1" style="color: #222; font-weight: 700;">Tên danh muc</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @placeholder = "Tên danh mục" })
                                @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
                            </div>
                            

                        </div>
                        <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">

                            <a href="/admin/ProductCategory" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    }

                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>